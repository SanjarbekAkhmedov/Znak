@model ProductViewModel
@{
    var products = Model.Products.ToList();
}

<div class="container mt-5">
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 border-0 shadow">
                    @if (product.Image != null && product.Image.Length > 0)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(product.Image)" class="card-img-top" alt="Product Image">
                    }
                    else
                    {
                        <img src="~/images/empty.png" class="card-img-top" alt="Product Image">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">Price: @product.Price</p>
                        <p class="card-text">Category: @product.ProductCategory.Name</p>
                        <p class="card-text">Unit Measure: @product.UnitMeasure.Name</p>
                    </div>
                    <div class="card-footer">
                        <table>
                            <tr>
                                <td>
                                    <a href="@Url.Action("ViewProduct", "Product", new { id = product.Id })" class="btn btn-sm btn-success">View</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-sm btn-primary">Edit</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
