@model RegistrationViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Регистрация пользователя</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css">
</head>
<body class="login-page" style="background: linear-gradient(#92c51c, #9ce3ef, #3dbc44);">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Пользователь</b> Регистрация</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Зарегистрировать новое членство</p>

                <form method="post" asp-controller="User" asp-action="Registration" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Имя" asp-for="FirstName" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Фамилия" asp-for="LastName" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Телефон" asp-for="Phone" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Адрес" asp-for="Address" required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Эл. почта" asp-for="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Логин" asp-for="Login" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" required>
                    </div>
                    <div class="form-group">
                        <label for="avatar">Аватар</label>
                        <input type="file" class="form-control-file" id="avatar" asp-for="Avatar" onchange="previewAvatar()">
                    </div>
                    <div class="form-group">
                        <img id="avatar-preview" src="#" alt="Предварительный просмотр аватара" style="display: none; max-width: 100px; max-height: 100px;">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Зарегистрироваться</button>
                </form>

                <p class="mt-2 mb-0">
                    <a asp-controller="User" asp-action="Login" class="text-center">Уже есть аккаунт? Войти</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <script>
        function previewAvatar() {
            const preview = document.getElementById('avatar-preview');
            const file = document.getElementById('avatar').files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
                preview.style.display = 'block';
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = 'none';
            }
        }
    </script>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js"></script>
</body>
</html>
